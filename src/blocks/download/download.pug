//- Все примеси в этом файле должны начинаться c имени блока (download)

mixin download(mods)

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' download--' + modsList[i].trim();
      }
    }

  ul.download(class=allMods)&attributes(attributes)
    block

mixin download-link(link, mods)

  //- Принимает:
  //-   link     {string} - ссылка
  //-   mods     {string} - список модификаторов
  //- Вызов:
        +download-link('https://vk.com/n.gromov', 'some-mod')
          span ВКонтакте

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' download__link-wrap--' + modsList[i].trim();
      }
    }

  li.download__link-wrap(class=allMods)&attributes(attributes)
    a.download__link(href=link)
      block
